# Environment
NODE_ENV=development

# Server
PORT=3000
HOST=localhost

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:55433/prompt_gen_marketplace
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6380
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# OAuth
OAUTH_CLIENT_ID=prompt-gen-web
OAUTH_REDIRECT_URI=http://localhost:5173/oauth/callback

# S3 / Object Storage (for package files)
S3_ENDPOINT=
S3_BUCKET=prompt-gen-packages
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=us-east-1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:5174

# Logging
LOG_LEVEL=info

